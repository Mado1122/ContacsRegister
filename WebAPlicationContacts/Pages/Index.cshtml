@page
@model IndexModel
@{
    ViewData["Title"] = "Register";
}


@if (TempData["Mensaje"] != null)
{   

    if (TempData["Type"].ToString() == "Succes")
    {
        <div class="alert alert-success" role="alert">
            @TempData["Mensaje"]
        </div>
    }
    else
    {
            <div class="alert alert-danger" role="alert">
                @TempData["Mensaje"]
            </div>
    }

    
}

    <div class="container">
        <h1 class="mb-4">Formulario de Registro</h1>
        <form method="post">
            <div class="mb-3">
                <label for="documento" class="form-label">*Documento de Identidad</label>
            <input type="text" class="form-control" id="Identification" name="Identification" placeholder="Documento de Identidad" required>
            <span asp-validation-for="Identification" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="nombres" class="form-label">*Nombres</label>
            <input type="text" class="form-control" id="Names" name="Names" placeholder="Nombres" required>
            <span asp-validation-for="Names" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="apellidos" class="form-label">*Apellidos</label>
            <input type="text" class="form-control" id="LastNames" name="LastNames" placeholder="Apellidos" required>
            <span asp-validation-for="LastNames" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="fechaNacimiento" class="form-label">*Fecha de Nacimiento</label>
            <input type="date" class="form-control" id="BirthDate" name="BirthDate" required>
            </div>

            <h1 class="mb-4">Informacion Contacto</h1>
            <div class="mb-3">
            <label for="documento" class="form-label">*Nombre Contacto</label>
            <input type="text" class="form-control" id="Contactname" name="Contactname" placeholder="Nombre Contacto" required>
            </div>
            <div class="mb-3">
                <label for="documento" class="form-label">*Telefono Contacto</label>
            <input type="text" class="form-control" id="ContactTel" name="ContactTel" placeholder="Telefono Contacto" required>
            </div>
            <div class="mb-3">
                <label for="documento" class="form-label">*Email Contacto</label>
            <input type="text" class="form-control" id="ContactEmail" name="ContactEmail" placeholder="Email Contacto" required>
            </div>
            <div class="mb-3">
                <label for="documento" class="form-label">*Direccion Contacto</label>
            <input type="text" class="form-control" id="ContactAddress" name="ContactAddress" placeholder="Direccion Contacto" required>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>

   

   

